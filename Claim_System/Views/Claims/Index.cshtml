@model List<Claim_System.Models.LecturerClaim>
@{
    ViewData["Title"] = "My Claims";
}

<h2>My Claims</h2>

<div class="dashboard-card">
    @if (!Model.Any())
    {
        <p>You have not submitted any claims yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Submitted At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("C")</td>
                        <td>@claim.TotalAmount.ToString("C")</td>
                        <td>@claim.Status</td>
                        <td>@claim.SubmittedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Claims", new { id = claim.Id })">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<a class="btn btn-success mt-2" href="@Url.Action("Create", "Claims")">Submit New Claim</a>
