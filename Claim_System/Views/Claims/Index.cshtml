@model IEnumerable<Claim_System.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<h2 class="text-center mb-4">My Submitted Claims</h2>

@if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
@if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">New Claim</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No claims submitted yet.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Hours</th>
                <th>Rate (R)</th>
                <th>Total (R)</th>
                <th>Status</th>
                <th>Date</th>
                <th>Documents</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@(claim.HoursWorked* claim.HourlyRate)</td>
                    <td>
                        <span class="badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                            @claim.Status
                        </span>
                    </td>
                    <td>@claim.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (claim.UploadedFiles != null && claim.UploadedFiles.Any())
                        {
                            foreach (var file in claim.UploadedFiles)
                            {
                                var fileName = System.IO.Path.GetFileName(file);
                                <a asp-action="DownloadFile" asp-route-id="@claim.Id" asp-route-file="@fileName" class="btn btn-sm btn-outline-info">@fileName</a>
                                <br />
                            }
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
