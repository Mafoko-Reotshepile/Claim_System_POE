@model List<Claim_System.Models.LecturerClaim>
@{
    ViewData["Title"] = "My Claims";
}

<h2>My Claims</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Submit New Claim</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Submitted At</th>
            <th>Description</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Status</th>
            <th>Files</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.SubmittedAt.ToLocalTime()</td>
                <td>@claim.Description</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.Status</td>
                <td>
                    @foreach (var file in claim.UploadedFiles)
                    {
                        <a asp-action="DownloadFile" asp-route-id="@claim.Id" asp-route-file="@System.IO.Path.GetFileName(file)">
                            @System.IO.Path.GetFileName(file)
                        </a>
                
                        <br />
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@claim.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
