@model List<Claim_System.Models.LecturerClaim>
@{
    ViewData["Title"] = "Manage Claims";
}

<h2>Manage Claims</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Description</th>
            <th>Hours</th>
            <th>Total</th>
            <th>Status</th>
            <th>Submitted At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.Description</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.Status</td>
                <td>@claim.SubmittedAt.ToLocalTime()</td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button type="submit" class="btn btn-sm btn-success" @(claim.Status == "Pending" ? "" : "disabled")>Approve</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" @(claim.Status == "Pending" ? "" : "disabled")>Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
