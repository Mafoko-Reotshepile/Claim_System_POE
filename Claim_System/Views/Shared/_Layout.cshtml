<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Claim System</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Claim System</h1>

        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <nav>
                <a asp-controller="Claims" asp-action="Index">My Claims</a> |
                <a asp-controller="Claims" asp-action="Create">Submit Claim</a>

                @* Coordinator-only links *@
                @if (User.IsInRole("Coordinator"))
                {
                    <text> | <a asp-controller="Claims" asp-action="Manage">Manage Claims</a></text>
                    <text> | <a asp-controller="Claims" asp-action="Report">HR Report</a></text>
                }
            </nav>

            <div>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline">
                    <button type="submit" class="btn btn-link">Logout (@User.Identity?.Name)</button>
                </form>
            </div>
        }
        else
        {
            <nav>
                <a asp-controller="Account" asp-action="Login">Login</a>
            </nav>
        }

        <hr />
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <hr />
        <small>&copy; 2025</small>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
