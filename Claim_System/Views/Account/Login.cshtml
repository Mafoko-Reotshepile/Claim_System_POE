@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-4">Login</h2>

<!-- Display TempData Messages Safely -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<form asp-action="Login" asp-controller="Account" method="post" class="w-50 mx-auto mt-3">
    <div class="form-group mb-3">
        <label for="username">Username</label>
        <input id="username" name="username" class="form-control" required placeholder="Enter your username" />
    </div>

    <div class="form-group mb-3">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="form-control" required placeholder="Enter your password" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>

<div class="mt-4 text-center">
    <p><strong>Lecturer:</strong> lecturer / 123</p>
    <p><strong>Coordinator:</strong> coordinator / 123</p>
</div>
